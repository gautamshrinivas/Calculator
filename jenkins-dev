pipeline {
    agent { label 'shop'}
    trigger {
        pollSCM ('* * * * *')
    }
    stages {
        stage ('vcs') {
            steps {
                git url: 'https://github.com/gautamshrinivas/Calculator.git',
                branch: 'dev'
            }
        }
        stage ('build') {
            steps {
                sh 'mvn package'
            }
        }
    }
}